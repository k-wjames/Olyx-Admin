<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="ke.co.ideagalore.olyxadmin.ui.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="ke.co.ideagalore.olyxadmin.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="ke.co.ideagalore.olyxadmin.ui.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_editStoreFragment"
            app:destination="@id/editStoreFragment" />
    </fragment>

    <fragment
        android:id="@+id/editStoreFragment"
        android:name="ke.co.ideagalore.olyxadmin.ui.fragments.EditStoreFragment"
        android:label="fragment_edit_store"
        tools:layout="@layout/fragment_edit_store" />
    <fragment
        android:id="@+id/catalogueItemsFragment"
        android:name="ke.co.ideagalore.olyxadmin.ui.fragments.CatalogueItemsFragment"
        android:label="fragment_catalogue_items"
        tools:layout="@layout/fragment_catalogue_items" >
        <action
            android:id="@+id/action_catalogueItemsFragment_to_viewCategoryProductsFragment"
            app:destination="@id/viewCategoryProductsFragment" />
    </fragment>

    <fragment
        android:id="@+id/editProductFragment"
        android:name="ke.co.ideagalore.olyxadmin.ui.fragments.EditProductFragment"
        android:label="fragment_edit_product"
        tools:layout="@layout/fragment_edit_product" >
        <action
            android:id="@+id/action_editProductFragment_to_viewCategoryProductsFragment"
            app:destination="@id/viewCategoryProductsFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewCategoryProductsFragment"
        android:name="ke.co.ideagalore.olyxadmin.ui.fragments.ViewCategoryProductsFragment"
        android:label="fragment_view_category_products"
        tools:layout="@layout/fragment_view_category_products" >
        <action
            android:id="@+id/action_viewCategoryProductsFragment_to_editProductFragment"
            app:destination="@id/editProductFragment" />
        <action
            android:id="@+id/action_viewCategoryProductsFragment_to_catalogueItemsFragment"
            app:destination="@id/catalogueItemsFragment" />
    </fragment>

</navigation>